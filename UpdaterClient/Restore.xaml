<Window x:Class="UpdaterClient.Restore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UpdaterClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListView x:Name="HistoryList" Grid.RowSpan="2">
            
        </ListView>
        <TextBox x:Name="tb_console" IsReadOnly="True" Margin="2" Grid.Row="1" Grid.Column="1" Background="CadetBlue"></TextBox>
        <Button Width="80" Grid.Row="2"  x:Name="btn_restore" Click="btn_restore_Click"  Height="28" Content="Restore" Grid.ColumnSpan="2" HorizontalAlignment="Right"></Button>
    </Grid>
</Window>
